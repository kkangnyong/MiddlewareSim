<UserControl x:Class="SimReeferMiddlewareSystemWPF.View.Menu.FOTAServerPacket"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SimReeferMiddlewareSystemWPF.ViewModel.Menu"
             mc:Ignorable="d">
    <UserControl.Resources>
        <vm:FOTAServerPacketViewModel x:Key="FOTAServerPacketViewModel"/>
        <Style x:Key="MyTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource FOTAServerPacketViewModel}"/>
    </UserControl.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
        <Grid Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="result" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="deviceNumber" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="deviceType" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="fwVersion" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="reqType" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="protocolVersion" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="sequenceType" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="containerType" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="8" Grid.Column="0" Text="containerNumber" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="9" Grid.Column="0" Text="downloadDate" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="10" Grid.Column="0" Text="extension" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>

            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Result}" Margin="3"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DeviceNumber}" Margin="3"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DeviceType}" Margin="3"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding FwVersion}" Margin="3"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding ReqType}" Margin="3"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding ProtocolVersion}" Margin="3"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding SequenceType}" Margin="3"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding ContainerType}" Margin="3"/>
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding ContainerNumber}" Margin="3"/>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding DownloadDate}" Margin="3"/>
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Extension}" Margin="3"/>

        </Grid>
    </ScrollViewer>
</UserControl>
