<UserControl x:Class="SimReeferMiddlewareSystemWPF.View.Menu.IDGenerateServer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimReeferMiddlewareSystemWPF.View.Menu"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="MyButtonTextStyle" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="MyTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="0,0,0,0" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Top" Background="LightBlue">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="1. ID Create" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MyTextStyle}"/>
            </Grid>
            <Grid Grid.Row="1">
                <ContentControl Content="{Binding CurrentIDGenerateServerCreatePacketViewModel}" Margin="0,0,0,0"/>
            </Grid>
            <Grid Grid.Row="2" VerticalAlignment="Bottom">
                <Button IsEnabled="{Binding IsIDCreateEnabled}" Command="{Binding ToSendIDCreatePacketCommand}" Content="Send ID Create Packet" VerticalAlignment="Bottom" Margin="5" Height="40" Style="{StaticResource MyButtonTextStyle}"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Top" Background="LightBlue">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="2. ID Regist" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MyTextStyle}"/>
            </Grid>
            <Grid Grid.Row="1">
                <ContentControl Content="{Binding CurrentIDGenerateServerRegistPacketViewModel}" Margin="0,0,0,0"/>
            </Grid>
            <Grid Grid.Row="2" VerticalAlignment="Bottom">
                <Button IsEnabled="{Binding IsIDRegistEnabled}" Command="{Binding ToSendIDRegistPacketCommand}" Content="Send ID Regist Packet" VerticalAlignment="Bottom" Margin="5" Height="40" Style="{StaticResource MyButtonTextStyle}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
    
