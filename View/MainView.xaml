<Window x:Class="SimReeferMiddlewareSystemWPF.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local8="clr-namespace:SimReeferMiddlewareSystemWPF.View.ProtocolVer.Ver8"
        xmlns:viewmodel8="clr-namespace:SimReeferMiddlewareSystemWPF.ViewModel.ProtocolVer.Ver8"
        xmlns:local9="clr-namespace:SimReeferMiddlewareSystemWPF.View.ProtocolVer.Ver9"
        xmlns:viewmodel9="clr-namespace:SimReeferMiddlewareSystemWPF.ViewModel.ProtocolVer.Ver9"
        xmlns:local10="clr-namespace:SimReeferMiddlewareSystemWPF.View.ProtocolVer.Ver10"
        xmlns:viewmodel10="clr-namespace:SimReeferMiddlewareSystemWPF.ViewModel.ProtocolVer.Ver10"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" xmlns:uicontrol="clr-namespace:SimReeferMiddlewareSystemWPF.UIControl"
        mc:Ignorable="d"
        Title="{Binding TitleVersion}" Height="800" MinWidth="1920">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel8:ProtocolViewModelVer8}">
            <local8:ProtocolVer8/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel8:DeviceInfoViewModelVer8}">
            <local8:DeviceInfoVer8/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel8:SetupInfoViewModelVer8}">
            <local8:SetupInfoVer8/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel8:DeviceBodyViewModelVer8}">
            <local8:DeviceBodyVer8/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel8:ReeferBodyViewModelVer8}">
            <local8:ReeferBodyVer8/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel9:ProtocolViewModelVer9}">
            <local9:ProtocolVer9/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel9:DeviceInfoViewModelVer9}">
            <local9:DeviceInfoVer9/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel9:SetupInfoViewModelVer9}">
            <local9:SetupInfoVer9/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel9:DeviceBodyViewModelVer9}">
            <local9:DeviceBodyVer9/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel9:ReeferBodyViewModelVer9}">
            <local9:ReeferBodyVer9/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel9:SensorBodyViewModelVer9}">
            <local9:SensorBodyVer9/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel10:ProtocolViewModelVer10}">
            <local10:ProtocolVer10/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel10:DeviceInfoViewModelVer10}">
            <local10:DeviceInfoVer10/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel10:SetupInfoViewModelVer10}">
            <local10:SetupInfoVer10/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel10:DeviceBodyViewModelVer10}">
            <local10:DeviceBodyVer10/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel10:ReeferBodyViewModelVer10}">
            <local10:ReeferBodyVer10/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel10:SensorBodyViewModelVer10}">
            <local10:SensorBodyVer10/>
        </DataTemplate>
        <Style x:Key="MyMenuStyle" TargetType="{x:Type MenuItem}">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="MyTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="MyCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style x:Key="MyComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="MyTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="MyRichTextBoxStyle" TargetType="{x:Type RichTextBox}">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition />
            <RowDefinition Height="3"/>
            <RowDefinition Height="270"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="72" VerticalAlignment="Top" Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Height="55" VerticalAlignment="Top" Background="AliceBlue" >
                <Menu x:Name="menu1" VerticalAlignment="Top" Background="AliceBlue">
                    <Menu.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="1" Softness="1" Opacity="50" Color="LightBlue"/>
                    </Menu.BitmapEffect>
                    <MenuItem Header="Menu" Background="AliceBlue" VerticalAlignment="Top" Style="{StaticResource MyMenuStyle}">
                        <MenuItem Header="Send Manual Packet"/>
                        <Separator/>
                        <MenuItem Header="ID Server"/>
                        <Separator/>
                        <MenuItem Header="FOTA Server"/>
                    </MenuItem>
                </Menu>
            </Grid>
            <Grid Grid.Row="1" VerticalAlignment="Stretch" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="850"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="IP:" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MyTextBlockStyle}"/>
                <TextBox Grid.Column="1" Text="{Binding IP}" IsEnabled="{Binding IsEnabled}" Style="{StaticResource MyTextBoxStyle}" BorderThickness="1" BorderBrush="Black"/>
                <TextBlock Grid.Column="2" Text="Port:" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MyTextBlockStyle}"/>
                <TextBox Grid.Column="3" Text="{Binding Port}" IsEnabled="{Binding IsEnabled}" Style="{StaticResource MyTextBoxStyle}" BorderThickness="1" BorderBrush="Black"/>
                <TextBlock Grid.Column="4" Text="Protocol Version:" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MyTextBlockStyle}"/>
                <ComboBox Grid.Column="5" IsEnabled="{Binding IsEnabled}" SelectedItem="{Binding ProtocolVersion}" ItemsSource="{Binding ProtocolVerList}" Style="{StaticResource MyComboBoxStyle}" BorderThickness="1" BorderBrush="Black" Margin="3,0,3,0"/>
                <Button Grid.Column="6" Command="{Binding ToConnectCommand}" IsEnabled="{Binding IsConnectEnabled}" Content="Connect" Style="{StaticResource MyButtonStyle}" Margin="3,0,3,0"/>
                <Button Grid.Column="7" Command="{Binding ToDisconnectCommand}" IsEnabled="{Binding IsDisconnectEnabled}" Content="Disconnect" Style="{StaticResource MyButtonStyle}" Margin="3,0,3,0"/>
                <Image Grid.Column="8" gif:ImageBehavior.AnimatedSource="{Binding ToLoadImage}" Margin="3,0,3,0"/>

                <StackPanel Grid.Column="9" Orientation="Horizontal" >
                    <CheckBox Content=":통신 주기 사용" IsChecked="{Binding IsCommPeriodChecked}" FlowDirection="RightToLeft" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyCheckBoxStyle}"/>
                    <TextBlock Text="통신 주기(분):" Visibility="{Binding VisibleCommPeriod}" IsEnabled="{Binding IsCommPeriodEnabled}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyTextBlockStyle}"/>
                    <uicontrol:NumberTextBox Visibility="{Binding VisibleCommPeriod}" Text="{Binding CommPeriod}" IsEnabled="{Binding IsCommPeriodEnabled}" Width="35" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" Style="{StaticResource MyTextBoxStyle}" BorderThickness="1" BorderBrush="Black"/>
                    <CheckBox Content=":음영 데이터 사용" IsChecked="{Binding IsRepeatChecked}" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyCheckBoxStyle}"/>
                    <TextBlock Text="코드 종류:" Visibility="{Binding VisibleRepeat}" IsEnabled="{Binding IsRepeatEnabled}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyTextBlockStyle}"/>
                    <ComboBox Visibility="{Binding VisibleRepeat}" SelectedItem="{Binding Code}" ItemsSource="{Binding CodeList}" IsEnabled="{Binding IsRepeatEnabled}" Style="{StaticResource MyComboBoxStyle}" BorderThickness="1" BorderBrush="Black" Margin="0,0,5,0"/>
                    <TextBlock Text="음영 데이터 갯수:" Visibility="{Binding VisibleRepeat}" IsEnabled="{Binding IsRepeatEnabled}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyTextBlockStyle}"/>
                    <uicontrol:NumberTextBox Visibility="{Binding VisibleRepeat}" Text="{Binding RepeatCount}" IsEnabled="{Binding IsRepeatEnabled}" Width="35" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyTextBoxStyle}" BorderThickness="1" BorderBrush="Black"/>
                    <!--<TextBlock Text="수행 횟수:" Visibility="{Binding VisibleRepeat}" IsEnabled="{Binding IsRepeatEnabled}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyTextBlockStyle}"/>
                    <TextBlock Text="{Binding Count}" Visibility="{Binding VisibleRepeat}" IsEnabled="{Binding IsRepeatEnabled}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource MyTextBlockStyle}"/>-->
                </StackPanel>

                <Image Grid.Column="10" Source="{Binding ToCompanyImage}"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Background="AliceBlue">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Grid>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Height="3" Margin="0" Background="AliceBlue" />
        <Grid Grid.Row="3" HorizontalAlignment="Stretch" Background="LightGoldenrodYellow">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Top" Background="LightBlue">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text=" Received Message" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MyTextBlockStyle}"/>
            </Grid>
            <Grid Grid.Row="1" Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="170"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" VerticalAlignment="Top" Height="170">
                    <Border BorderBrush="LightSkyBlue" BorderThickness="2"/>
                    <RichTextBox Margin="5" IsReadOnly="True" Style="{StaticResource MyRichTextBoxStyle}">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="{Binding ReceivedMessage}"/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Grid>
                <Grid Grid.Row="1" VerticalAlignment="Stretch">
                    <Border BorderBrush="LightBlue" BorderThickness="2"/>
                    <RichTextBox Margin="5" IsReadOnly="True" Style="{StaticResource MyRichTextBoxStyle}">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="{Binding ReceivedRawMessage}"/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>                    
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
