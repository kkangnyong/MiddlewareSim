<UserControl x:Class="SimReeferMiddlewareSystemWPF.View.ProtocolVer.Ver10.SetupInfoVer10"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SimReeferMiddlewareSystemWPF.ViewModel.ProtocolVer.Ver10"
             mc:Ignorable="d">
    <UserControl.Resources>
        <vm:SetupInfoViewModelVer10 x:Key="SetupInfoViewModelVer10"/>
        <Style x:Key="MyTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource SetupInfoViewModelVer10}"/>
    </UserControl.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
        <Grid Margin="0,0,540,0" Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="code" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="ccpr" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="commPeriod" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="gpsTimeOut" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="gpsStableTime" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="wireConnTimeOut" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="retryCount" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="rcCount" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="8" Grid.Column="0" Text="totalStandbyCount" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="9" Grid.Column="0" Text="accelShockUpper" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="10" Grid.Column="0" Text="setTempLower" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="11" Grid.Column="0" Text="setTempUpper" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="12" Grid.Column="0" Text="humidLower" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="13" Grid.Column="0" Text="humidUpper" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="14" Grid.Column="0" Text="stateChangeAlarm" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>
            <TextBlock Grid.Row="15" Grid.Column="0" Text="cutOffVoltage" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Style="{StaticResource MyTextBlockStyle}"/>

            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Code}" Margin="3"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CCPR}" Margin="3"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CommPeriod}" Margin="3"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding GpsTimeout}" Margin="3"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding GpsStableTime}" Margin="3"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding WireConnTimeOut}" Margin="3"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding RetryCount}" Margin="3"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding RcCount}" Margin="3"/>
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding TotalStandbyCount}" Margin="3"/>
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding AccelShockUpper}" Margin="3"/>
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding SetTempLower}" Margin="3"/>
            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding SetTempUpper}" Margin="3"/>
            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding HumidLower}" Margin="3"/>
            <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding HumidUpper}" Margin="3"/>
            <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding StateChangeAlarm}" Margin="3"/>
            <TextBox Grid.Row="15" Grid.Column="1" Text="{Binding CutOffVoltage}" Margin="3"/>

        </Grid>
    </ScrollViewer>
</UserControl>
