<UserControl x:Class="SimReeferMiddlewareSystemWPF.View.ProtocolVer.Ver8.ProtocolVer8"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimReeferMiddlewareSystemWPF.View.ProtocolVer.Ver8"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="MyButtonTextStyle" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="0,0,0,0" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Stretch">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="DeviceInfo" FontSize="30"/>
                <ContentControl Content="{Binding CurrentDeviceInfoViewModel}" Margin="0,0,0,0"/>
            </Grid>
            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                <Button Command="{Binding ToDeviceInfoCommand}" Content="Send Device Info Packet" VerticalAlignment="Bottom" Margin="5" Height="40" Style="{StaticResource MyButtonTextStyle}"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Stretch">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="SetupInfo" FontSize="30"/>
                <ContentControl Content="{Binding CurrentSetupInfoViewModel}" Margin="0,0,0,0"/>
            </Grid>
            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                <Button Command="{Binding ToSetupInfoCommand}" Content="Send Setup Info Packet" VerticalAlignment="Bottom" Margin="5" Height="40" Style="{StaticResource MyButtonTextStyle}"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Border BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Text="Start Data" FontSize="30"/>
            <Button Command="{Binding ToStartDataCommand}" Content="Send Start Data Packet" VerticalAlignment="Center" Margin="5" Height="147" Style="{StaticResource MyButtonTextStyle}"/>
        </Grid>
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Stretch">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="DeviceData" FontSize="30"/>
                <ContentControl Content="{Binding CurrentDeviceBodyViewModel}"/>
            </Grid>
            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                <Button Command="{Binding ToDeviceBodyCommand}" Content="Send Device Data Packet" VerticalAlignment="Bottom" Margin="5" Height="40" Style="{StaticResource MyButtonTextStyle}"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Stretch">
                <Border BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="ReeferData" FontSize="30"/>
                <ContentControl Content="{Binding CurrentReeferBodyViewModel}"/>
            </Grid>
            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                <Button Command="{Binding ToReeferBodyCommand}" Content="Send Reefer Data Packet" VerticalAlignment="Bottom" Margin="5" Height="40" Style="{StaticResource MyButtonTextStyle}"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="5">
            <Border BorderBrush="Black" BorderThickness="1"/>
            <TextBlock Text="Start Command" FontSize="30"/>
            <Button Command="{Binding ToStartCommandCommand}" Content="Send Start Command" VerticalAlignment="Center" Margin="5" Height="147" Style="{StaticResource MyButtonTextStyle}"/>
        </Grid>
    </Grid>
</UserControl>
    
