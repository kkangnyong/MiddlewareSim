<UserControl x:Class="SimReeferMiddlewareSystemWPF.UIControl.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimReeferMiddlewareSystemWPF.UIControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60"
             x:Name="ThisToggleSwitchControl">
    
    <UserControl.Resources>
        <Style x:Key="ToggleSwitchStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Viewbox Stretch="Uniform">
                            <Grid Width="50" Height="25">
                                <!-- 배경 (스위치 트랙) -->
                                <Border x:Name="BackgroundBorder"
                                        CornerRadius="12.5"
                                        Background="#FFDEDEDE"
                                        BorderThickness="1"
                                        BorderBrush="#FFC0C0C0"/>

                                <!-- 스위치 핸들 (원형 부분) -->
                                <Ellipse x:Name="Handle"
                                         Width="20" Height="20"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="2, 0, 0, 0"/>
                                         <!--Effect="{x:Static System.Windows.Media.Effects.ShadowEffect.Instance}"/>-->

                                <!-- 애니메이션을 위한 트랜스폼 -->
                                <!--<Border.RenderTransform>
                                    <TranslateTransform x:Name="TranslateTransform"/>
                                </Border.RenderTransform>-->
                            </Grid>
                        </Viewbox>

                        <ControlTemplate.Triggers>
                            <!-- 체크되었을 때의 상태 (켜짐) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="#FF4CAF50"/>
                                <!-- 녹색 배경 -->
                                <Setter TargetName="Handle" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Handle" Property="Margin" Value="0, 0, 2, 0"/>
                            </Trigger>

                            <!-- 마우스 오버 상태 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- 여기에 마우스 오버 시 스타일 변경 추가 가능 -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <CheckBox 
            x:Name="ToggleCheckBox"
            IsChecked="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsToggled, Mode=TwoWay}"
            Style="{StaticResource ToggleSwitchStyle}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
    </Grid>
</UserControl>
